{
    "name": "Node.js Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "appPort": [
        "3000:3000"
    ],
    "postCreateCommand": "npm install",
    "remoteUser": "node",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    }
}
